    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         

    String studentName = jTextField1.getText();
    String studentClass = jTextField2.getText();
    String studentRollNo = jTextField3.getText();
    String bookName = jTextField4.getText();
    String authorName = jTextField5.getText();
    String issueDate = jTextField6.getText();
    String returnDate = jTextField7.getText();

    // Check if any of the fields are empty
    if (studentName.isEmpty() || studentClass.isEmpty() || studentRollNo.isEmpty() ||
        bookName.isEmpty() || authorName.isEmpty() || issueDate.isEmpty() || returnDate.isEmpty()) {
        // Show a popup message if any field is empty
        JOptionPane.showMessageDialog(this, "Please enter all details properly");
    } else {
        // Construct the text to be displayed in the textarea
        String displayText = "Student Name: " + studentName + "\n" +
                             "Student Class: " + studentClass + "\n" +
                             "Student RollNo: " + studentRollNo + "\n" +
                             "Book Name: " + bookName + "\n" +
                             "Author Name: " + authorName + "\n" +
                             "Issue Date: " + issueDate + "\n" +
                             "Return Date: " + returnDate;

        // Set the text in the textarea
        jTextArea1.setText(displayText);
    }

    }                                        

