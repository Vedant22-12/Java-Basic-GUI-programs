    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         


    String customerName = jTextField1.getText();
    String address = jTextField2.getText();
    String mobileNumber = jTextField3.getText();
    String pizzaType = (String) jComboBox1.getSelectedItem();
    String Qantity = jTextField5.getText();
    String paymentOption = (String) jComboBox2.getSelectedItem();
    double price = calculatePrice(pizzaType, Qantity);


    // Check if any field is empty
    if (customerName.isEmpty() || address.isEmpty() || mobileNumber.isEmpty() ||
        pizzaType.equals("Choose Pizza") || paymentOption.equals("Choose Payment Option")) {
        // Show a message if any field is empty
        JOptionPane.showMessageDialog(this, "Please enter all details properly", "Error", JOptionPane.ERROR_MESSAGE);
    } else {
        // Calculate price based on pizza type and toppings
        
        // Display order details
        String orderDetails = "Customer Name: " + customerName + "\n" +
                              "Address: " + address + "\n" +
                              "Mobile Number: " + mobileNumber + "\n" +
                              "Pizza Type: " + pizzaType + "\n" +
                              "Qantity: " + Qantity + "\n" +
                              "Price: $" + price + "\n" +
                              "Payment Option: " + paymentOption;
        
        // Show the order details in a JOptionPane
        JOptionPane.showMessageDialog(this, orderDetails, "Order Summary", JOptionPane.INFORMATION_MESSAGE);
    }
}

// Method to calculate the price based on pizza type and toppings
// Method to calculate the price based on pizza type and quantity
private double calculatePrice(String pizzaType, String quantity) {
    // Base price for each type of pizza
    double basePrice;
    switch (pizzaType) {
        case "Mushroom Pizza":
        case "Golden Corn Pizza":
            basePrice = 8.99; // Price for Mushroom and Golden Corn Pizza
            break;
        case "Chicken Tandoori":
        case "Veg Loaded":
            basePrice = 10.99; // Price for Chicken Tandoori and Veg Loaded
            break;
        case "Non-Veg Loaded":
            basePrice = 12.99; // Price for Non-Veg Loaded
            break;
        default:
            basePrice = 0.0; // Default price
    }

    // Parse the quantity string into an integer
    int qty = Integer.parseInt(quantity);

    // Total price including base price and quantity
    return basePrice * qty;

    }                                        

